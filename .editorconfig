# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.java]
indent_size = 4

[*.xml]
indent_size = 4

[*.gradle]
indent_size = 4

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 4

[**.min.js]
indent_style = ignore
insert_final_newline = false

[dune]
indent_size = ignore
